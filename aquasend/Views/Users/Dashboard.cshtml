@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
    User user = Model;
}

<link rel="stylesheet" href="~/css/user.css" />

<div class="container">
    <h2 class="text-center heading mb-5">Dashboard</h2>
    <p class="text-center text-success">@TempData["Success"]</p>
    <p class="text-center text-danger">@TempData["Error"]</p>
    <div class="row">
        <div class="col-md-8 shadow p-3 rounded mb-3">
            <div class="text-right">
                <i class="far fa-edit " data-toggle="modal" data-target="#modal"></i>
            </div>
            <h4>User Details</h4>
            <div class="row">
                <div class="col-md-5 m-1">
                    <h6 class="colorize">Name</h6>
                    <h5>@user.FirstName @user.LastName</h5>
                </div>

                <div class="col-md-5 m-1">
                    <h6 class="colorize">Email</h6>
                    <h5>@user.Email</h5>
                </div>

                <div class="col-md-3 m-1">
                    <h6 class="colorize">Phone</h6>
                    <h5>@user.PhoneNumber</h5>
                </div>
            </div>
        </div>
    </div>
    <br />


<div id="modal" class="modal">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-body m-3">
                <h3 class="text-center mb-3">User Details</h3>
                <form method="post" asp-action="UpdateProfile" asp-controller="User">
                    <div class="row">
                        <input class="form-control m-2 col-md-5" value="@user.FirstName" name="Firstname" type="text" placeholder="Firstname" required />
                        <input class="form-control m-2 col-md-5" value="@user.LastName" name="Lastname" type="text" placeholder="Lastname" required />
                        <input class="form-control m-2 col-md-5" value="@user.PhoneNumber" name="PhoneNumber" type="tel" placeholder="PhoneNumber" required />
                    </div>
                    <button class="mt-3 btn-sm" type="submit">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>
