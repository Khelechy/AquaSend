@using Microsoft.AspNetCore.Http
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<div id="sidebar" class="app-sidebar">
    <!-- BEGIN scrollbar -->
    <div class="app-sidebar-content" data-scrollbar="true" data-height="100%">

        <!-- BEGIN menu -->
        <div class="menu">
            <div class="menu-header">
                <a asp-controller="Home" asp-action="Index" class="brand-logo">
                    <h2>AquaSend</h2>
                </a>
                @*<a class="navbar-brand mr-5 p-0 col-md-2" asp-area="" asp-controller="Home" asp-action="Index"><img alt="Logo" src="~/assets/img/eosLogo.png" width="80%" /></a>*@
            </div>
            <div class="menu-header">Navigation</div>
            <div class="menu-item @(ViewContext.RouteData.Values["Action"].ToString() == "Dashboard" ? "active" : "")">
                <a asp-controller="Users" asp-action="Dashboard" class="menu-link">
                    <span class="menu-icon"><i class="fa fa-home"></i></span>
                    <span class="menu-text">Dashboard</span>
                </a>
            </div>

            <div class="menu-item @(ViewContext.RouteData.Values["Action"].ToString() == "Requests" ? "active" : "")">
                <a asp-controller="Users" asp-action="Requests" class="menu-link">
                    <span class="menu-icon"><i class="fas fa-money-bill-wave"></i></span>
                    <span class="menu-text">My Requests</span>
                </a>
            </div>

            <div class="menu-item has-sub @(ViewContext.RouteData.Values["Action"].ToString() == "" ? "active" : ViewContext.RouteData.Values["Action"].ToString() == "ChangePassword" ? "active" : "")">
                <a href="#" class="menu-link">
                    <span class="menu-icon">
                        <i class="fa fa-user"></i>
                        @*<span class="menu-icon-label">6</span>*@
                    </span>
                    <span class="menu-text">User Management</span>
                    <span class="menu-caret"><b class="caret"></b></span>
                </a>
                <div class="menu-submenu">
                    <div class="menu-item @(ViewContext.RouteData.Values["Action"].ToString() == "ChangePassword" ? "active" : "")">
                        <a asp-controller="Users" asp-action="ChangePassword" class="menu-link">
                            <span class="menu-icon">
                                <i class="fa fa-key"></i>
                                @*<span class="menu-icon-label">6</span>*@
                            </span>
                            <span class="menu-text">Change Password</span>
                        </a>
                    </div>
                    @*<div class="menu-item @(ViewContext.RouteData.Values["Action"].ToString() == "Pickup" ? "active" : "")">
                        <a asp-controller="Request" asp-action="Pickup" class="menu-link">
                            <span class="menu-text">Pickup</span>
                        </a>
                    </div>*@
                </div>
            </div>



            <div class="menu-item has-sub">



            </div>






        </div>
        <!-- END menu -->
    </div>
    <!-- END scrollbar -->
    <!-- BEGIN mobile-sidebar-backdrop -->
    <button class="app-sidebar-mobile-backdrop" data-dismiss="sidebar-mobile"></button>
    <!-- END mobile-sidebar-backdrop -->
</div>
